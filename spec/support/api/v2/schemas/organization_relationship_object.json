{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "organization_relationship_object.json",
  "title": "Organization Relationship Object",
  "description": "This is a schema for the Organization relationship object.",

  "definitions": {
    "organization": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": {"type": "string"},
        "type": {
          "type": "string",
          "pattern": "^organizations$"
        }
      }
    }
  }
}
